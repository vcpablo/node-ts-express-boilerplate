{
  "name": "node-ts-express-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate to create an API based on NodeJS + Express + TypeScript",
  "main": "src/index.js",
  "scripts": {
    "debug": "cross-env NODE_ENV=development nodemon --exec ts-node-dev --respawn --expose-gc --inspect=9222 src/index.ts ",
    "start": "cross-env NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "prod": "pm2 start ecosystem.config.js --env production",
    "test": "jest",
    "lint": "eslint --fix \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "<Project URL>"
  },
  "author": "Leandro Medeiros (https://github.com/neomedeiros)",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.2",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "module-alias": "^2.2.2",
    "mongoose": "^5.9.7",
    "pipeawait": "^1.0.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.18.2",
    "prettier-eslint": "^8.8.2",
    "sinon": "^8.1.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  },
  "_moduleAliases": {
    "@modules": "src/modules",
    "@common": "src/common"
  }
}
